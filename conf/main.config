
conda.enabled = true
apptainer.enabled = true
report.overwrite = true

process {
    
    executor = 'slurm'
    cpus = 2
    memory = '40 GB'
    time = '2h'

    withName: 'm1_process' { 
        maxForks = 50
        memory = '20 GB'
        time = '2h'
        queue = "standard"
    }

    withName: 'm2_process' {
        errorStrategy = 'retry'
        maxRetries = 3
        memory = '20 GB'
        time = '2h'
        queue = "standard"
        // conda = "envs/nftemp.yml" // uncomment to switch between conda and apptainer
        container = "envs/containers/nftemp/nftemp.sif"
    }

    withName: 'm3_process' { 
        memory = '20 GB'
        queue = "gpu"
        time = "2h"
        clusterOptions = '--gres=shard:2 --nodelist=apollo-21'
    }

}


executor {
  $slurm {
    queueSize = 600
  }
}
